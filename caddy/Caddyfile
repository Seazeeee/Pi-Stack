tiny.lab {
    tls internal
    # Deny non-LAN access
    @external not remote_ip 192.168.1.0/24 127.0.0.1 ::1
    respond @external 403
    
    # Proxies - order matters, most specific first
    handle /vm/* {
        reverse_proxy victoria-metrics:8428
    }
    handle /node/* {
        reverse_proxy node-exporter:9100
    }
    handle /* {
        reverse_proxy grafana:3000
    }
}
